<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Oma_Projekti_1.Views.Animal"
             xmlns:vm="clr-namespace:Oma_Projekti_1.ViewModels"
             Title="{Binding Title}">
    
    
    <ContentPage.Content>
        <StackLayout>
            
            <Button Text="What sound does the animal make?" VerticalOptions="CenterAndExpand" ></Button> 
            <Label Text="{Binding Name}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>

